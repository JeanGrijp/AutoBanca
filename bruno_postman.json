{
	"info": {
		"name": "AutoBanca",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Subjects",
			"item": [
				{ "name": "List All", "request": { "method": "GET", "url": "{{baseUrl}}/subjects" } },
				{ "name": "Create", "request": { "method": "POST", "url": "{{baseUrl}}/subjects", "body": { "mode": "json", "raw": "{\"name\": \"Constitutional Law\"}" } } },
				{ "name": "Get by ID", "request": { "method": "GET", "url": "{{baseUrl}}/subjects/{{subject_id}}" } },
				{ "name": "Update", "request": { "method": "PUT", "url": "{{baseUrl}}/subjects/{{subject_id}}", "body": { "mode": "json", "raw": "{\"name\": \"Administrative Law\"}" } } },
				{ "name": "Delete", "request": { "method": "DELETE", "url": "{{baseUrl}}/subjects/{{subject_id}}" } }
			]
		},
		{
			"name": "Topics",
			"item": [
				{ "name": "List All", "request": { "method": "GET", "url": "{{baseUrl}}/topics" } },
				{ "name": "Create", "request": { "method": "POST", "url": "{{baseUrl}}/topics", "body": { "mode": "json", "raw": "{\"name\": \"Administrative Acts\", \"subject_id\": \"{{subject_id}}\"}" } } },
				{ "name": "List by Subject", "request": { "method": "GET", "url": "{{baseUrl}}/topics/subject/{{subject_id}}" } }
			]
		},
		{
			"name": "Questions",
			"item": [
				{ "name": "List (Filters in Body)", "request": { "method": "GET", "url": "{{baseUrl}}/questions", "body": { "mode": "json", "raw": "{\"institution\": \"FGV\"}" } } },
				{ "name": "Create", "request": { "method": "POST", "url": "{{baseUrl}}/questions", "body": { "mode": "json", "raw": "{\n  \"statement\": \"Sample question\",\n  \"year\": 2024,\n  \"topic_id\": \"{{topic_id}}\",\n  \"institution\": \"STF\",\n  \"position\": \"Judge\",\n  \"level\": \"Senior\"\n}" } } },
				{ "name": "Get (ID in Body)", "request": { "method": "GET", "url": "{{baseUrl}}/questions/{{question_id}}", "body": { "mode": "json", "raw": "{\"id\": \"{{question_id}}\"}" } } }
			]
		},
		{
			"name": "Exams",
			"item": [
				{ "name": "Generate PDF", "request": { "method": "POST", "url": "{{baseUrl}}/exams", "body": { "mode": "json", "raw": "{\"topic_id\": \"{{topic_id}}\", \"position\": \"Analyst\"}" } } }
			]
		}
	]
}